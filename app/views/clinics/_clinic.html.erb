<tr class="clinic" data-clinic-id=<%= clinic.id %>>
  <td><%= clinic.name %></td>
  <td><%= clinic.code %></td>
  <td><%= clinic.hours_in_english %></td>
  <td><%= clinic.hours_in_spanish %></td>
  <td>
    <%= button_to edit_clinic_path(clinic), class: 'btn btn-sm btn-default', :method => 'get', remote: true do %>
      <span class="glyphicon glyphicon-pencil"></span> Edit
    <% end %>
  </td>
  <td class="delete">
    <%= simple_form_for clinic, :method => :delete, remote: true do |f| %>
      <%=
        button_tag(
          type: 'submit',
          class: "btn btn-danger btn-sm",
          onclick: "return confirm('Are you sure you want permanently remove #{clinic.name}?')"
        ) do
      %>
        <i class="glyphicon glyphicon-remove"></i>
      <% end %>
    <% end %>
  </td>
</tr>
