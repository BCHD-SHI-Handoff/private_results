<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Pause/>

    <% if @welcome_message %>
      <Say voice="alice" language='en-US'><%= @welcome_message %></Say>
    <% elsif @error_message %>
      <Say voice="alice" language='en-US'><%= @error_message %></Say>
    <% end %>

    <Gather timeout="5" numDigits="1" action="welcome_process.xml" method="GET">
      <Say voice="alice" language='en-US'>For English, press 1</Say>
      <Say voice="alice" language='es-MX'>Para Espa√±ol oprima numero 2</Say>
    </Gather>

    <!-- If patient doesn't input anything, try again. -->
    <Redirect method="GET">welcome_repeat.xml</Redirect>
</Response>