<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Pause/>
    <% if !@error_message.blank? %>
      <Say voice="alice" language='<%= @language_code %>'><%= @error_message %></Say>
    <% end %>

    <Gather timeout="15"
            finishOnKey="#"
            action="results.xml?language_code=<%= @language_code %>&patient_number=<%= @patient_number %>"
            method="POST">
      <Say voice="alice" language="<%= @language_code %>"><%= @message %></Say>
    </Gather>
    <Redirect>enter_password.xml?language_code=<%= @language_code %>&patient_number=<%= @patient_number %></Redirect>
</Response>
