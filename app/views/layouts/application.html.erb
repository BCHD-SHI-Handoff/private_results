<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PrivateResults</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap-theme.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>

    <!-- Just for debugging purposes. Don't actually copy this line! -->
    <!--[if lt IE 9]><script src="../../assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body data-ng-app="PrivateResults" data-no-turbolink>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <%= link_to 'Private Results', root_path, class: 'navbar-brand' %>
        </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <li>
                  <%= link_to(destroy_user_session_path, :method => :delete) do %>
                    <span class="glyphicon glyphicon-log-out"></span> Sign Out
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <% if current_user  %>
          <div class="col-sm-3 col-md-2 sidebar">
            <ul class="nav nav-sidebar">
              <li class=<%= active_or_blank(patients_path) %>>
                <%= link_to patients_path do %>
                  <span class="glyphicon glyphicon-user"></span> Patients
                <% end %>
              </li>
              <li class=<%= active_or_blank(dashboards_path) %>>
                <%= link_to dashboards_path do %>
                  <span class="glyphicon glyphicon-dashboard"></span> Dashboard
                <% end %>
              </li>
              <% if current_user.admin? %>
                <li class=<%= active_or_blank(users_path) %>>
                  <%= link_to users_path do %>
                    <span class="glyphicon glyphicon-cog"></span> Users
                  <% end %>
                </li>
                <li class=<%= active_or_blank(clinics_path) %>>
                  <%= link_to clinics_path do %>
                    <span class="glyphicon glyphicon-cog"></span> Clinics
                  <% end %>
                </li>
                <li class=<%= active_or_blank(scripts_path) %>>
                  <%= link_to scripts_path do %>
                    <span class="glyphicon glyphicon-cog"></span> Scripts
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= yield %>

      </div>
    </div>

    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  </body>
</html>
